<p>You are currently editing a guest's records. Click "Update Records" to save changes.</p>

<form action="{{person.url}}/update" method="POST">
	<label for="name">First Name:</label>
	<input type="text" name="firstName" id="firstName" placeholder="required" value="{{person.firstName}}" autofocus></input>
	<br>
	<br>
	
	<label for="lastName">Last Name:</label>
	<input type="text" name="lastName" id="lastName" placeholder="required" value="{{person.lastName}}" autofocus></input>
	<br>
	<br>
	
	<label for="email">Email Address:</label>
	<input type="text" name="email" id="email" placeholder="Required" value="{{person.email}}"</input>
	<br>
	<br>
	
	<label for="phone">Home Phone:</label>
	<input type="tel" name="phone" id="phone" placeholder="" maxlength="11" value="{{person.phone}}"></input>
	<br>
	<br>
	
	<label for="cellPhone">Cell Phone:</label>
	<input type="tel" name="cellPhone" id="cellPhone" placeholder="Required" maxlength="11" value="{{person.cellPhone}}"></input>
	<br>
	<br>
	
	<label for="homeAddress">Home Address:</label>
	<input type="text" name="homeAddress" id="homeAddress" placeholder="" value="{{person.homeAddress}}"></input>
	<br>
	<br>
	
	<label for="city">City:</label>
	<input type="text" name="city" id="city" value="{{person.city}}"></input>
	<br>
	<br>
	
	<label for="state">State:</label>
	<input type="text" name="state" id="state" value="{{person.state}}"></input>
	<br>
	<br>
	
	<label for="zip">ZIP:</label>
	<input type="text" name="zip" id="zip" value="{{person.zip}}"></input>
	<br>
	<br>
	
	<label for="emergencyContact">Emergency Contact:</label>
	<input type="text" name="emergencyContact" id="emergencyContact" value="{{person.emergencyContact}}"></input>
	<br>
	<br>
	
	<label for="emergencyPhone">Emergency Phone Number:</label>
	<input type="tel" name="emergencyPhone" id="emergencyPhone" value="{{person.emergencyPhone}}"></input>
	<br>
	<br>
	
	<input type="submit" value="Update Records" class="btn-info"><br>
	
</form>