<form action="/admin/Room/{{_id}}/update" method="POST">
	<input name="_id" type="hidden" id="_id" value={{_id}}>
	<label for="roomNumber">Room Number:</label><br>
	<input name="roomNumber" type="number" id="roomNumber" value="{{data.roomNumber}}"><br><br>

	<!--<label for="building">Building Num:</label><br>
	<input type="radio" name="building" value="1">Building 1<br>
	<input type="radio" name="building" value="2">Building 2<br>-->
	
	<label for="handicapAccess">Handicap Access:</label><br>
	<input type="radio" name="handicapAccess" value="Yes">Yes<br>
	<input type="radio" name="handicapAccess" value="No">No<br>
	
	<label for="status">Room Status</label><br>
	<input type="radio" name="status" value="Available">Available<br>
	<input type="radio" name="status" value="Maintenence">Under Maintenence<br>
	<input type="radio" name="status" value="Unavailable">Unavailable<br>
	<input type="radio" name="status" value="Other">Other<br>
	
	<input type="submit" value="Update Room"><br>
	
	
</form>
	{{#if errors}}
    {{#each errors}}
	<p>{{this.msg}}</p>
	{{/each}}
	{{/if}}